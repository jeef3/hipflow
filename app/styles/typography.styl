@require "_theme";

html, button {
  font: 100%/1.5 "Lato", sans-serif;
  font-weight: 400;

  -webkit-font-smoothing: antialiased;
  -webkit-text-size-adjust: 100%;

  color: $text-color;
}

input, textarea {
  font-family: "lato", sans-serif;
}

blockquote,
.blockquote {
  $size = 0.125em;

  position: relative;

  padding-left: $size * 8;
  margin: $size * 8;

  &:before {
    content: '';

    position: absolute;
    top: $size;
    bottom: $size;
    left: 0;

    border: solid $size $red;
    border-radius: $size;
  }

  blockquote,
  .blockquote {
    color: $text-color-light;

    &:before {
      border-color: $text-color-light;
    }
  }
}

code,
.code {
  padding: 0 0.313em;

  font-family: "Source Code Pro", monospace;
  font-size: 0.813em;

  border: solid 1px #ddd;
  border-radius: 0.313em;
  background: #eee;
}

pre {
  overflow-x: scroll;
  padding: 0.5em;

  word-break: normal;

  border: solid 1px #ddd;
  border-radius: 0.313em;
  background: #eee;

  code {
    padding: 0;
    border: none;
  }
}

.monospaced {
  font-family: "Source Code Pro", monospace;
  font-size: 0.813em;
}

.list-title {
  margin: 1em 0 0.375em 0.750em;

  font-size: 0.813em;
  font-weight: 700;
  text-transform: uppercase;

  cursor: default;
}

