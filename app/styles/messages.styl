

.plain-message {
  margin: 0;
}

.strong {
  font-weight: 600;
}

.message__discussion-marker {
  position: absolute;
  width: 1.5em;
  padding: 0;
  top: 0;
  bottom: 0;
  left: 0;

  opacity: 0;

  transition: opacity 250ms ease-in-out;

  i {
    position: absolute;
    top: 0.625em;
    left: 0.125em;
  }

  .message:hover & {
    opacity: 0.1;
  }

  .message--thread &,
  .message--comment & {
    opacity: 0.4;
  }

  .message &:hover,
  .message--thread:hover &,
  .message--comment:hover & {
    opacity: 1;
  }

  .message--date-separator & {
    top: 2em;
  }
}
