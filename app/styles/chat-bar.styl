.chat-bar {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  height: 3.813em;

  // background: rgb(230, 230, 230);

  .chat-input-container {
    margin: 0 1em;
  }

  .chat-input {
    display: block;
    width: 100%;
    height: 2.45em;
    margin: 0;
    padding: 0.526em;

    line-height: 1.2;
    font-size: 1em;
    resize: none;

    border: solid 2px #e0e0e0;
    border-radius: 0.313em;

    &:focus {
      outline: none;
    }
  }

  .send-message-btn {
    position: absolute;
    width: 4em;
    top: 0;
    right: 0;
    bottom: 0;
  }

  .current-discussion {
    overflow: hidden;
    z-index: 1;
    position: absolute;
    height: 2em;
    left: 0;
    right: 0;
    top: -2em;
    padding: 0 2em 0 1em;

    line-height: 2em;
    white-space: nowrap;
    text-overflow: ellipsis;
    border-top: solid 1px #ddd;
    color: #666;

    background: rgba(200, 200, 200, 0.5);

    .close {
      position: absolute;
      top: 0;
      right: 0;
      color: #999;

      &:hover {
        color: #666;
      }
    }
  }
}
