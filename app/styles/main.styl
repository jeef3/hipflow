@require "_responsive";
@require "btn";

* { box-sizing: border-box; }

html,
body,
.container {
  width: 100%;
  height: 100%;

}

body {
  overflow: hidden;
  margin: 0;
}

$sidebar-width = 13.125em;
$chat-context-full-width = 13.125em;
$chat-context-medium-width = 5.63em;
$chat-context-small-width = 3.125em;

.container {
  position: relative;
}

.scroll-container {
  overflow-y: scroll;
}

.sidebar {
  position: absolute;
  width: $sidebar-width;
  top: 0;
  bottom: 0;
  left: 0;
}

.chat {
  position: absolute;
  top: 0;
  right: $chat-context-small-width;

  +from($breakpoint-large) {
    right: $chat-context-medium-width;
  }
  +from($breakpoint-x-large) {
    right: $chat-context-full-width;
  }

  bottom: 0;
  left: $sidebar-width;

  transition: right $responsive-transition-time ease-in-out;
}

.chat-context {
  position: absolute;
  width: $chat-context-small-width;

  +from($breakpoint-large) {
    width: $chat-context-medium-width;
  }
  +from($breakpoint-x-large) {
    width: $chat-context-full-width;
  }

  top: 0;
  right: 0;
  bottom: 0;

  background: #e6e6e6;

  transition: width $responsive-transition-time ease-in-out;
}

.btn--more-content {
  @extend .btn--no-focus;

  padding: 0 0.313em;
  margin: 0;

  font-size: 0.625em;
  color: #666;

  border-radius: 0.313em;
  background: #eee;
}

.small-title {
  clear: both;
  display: block;
  margin: 1em 0;

  font-size: 0.813em;
  font-weight: 700;
  color: #999;
  text-transform: uppercase;
  letter-spacing: 0.125em;
}

.has-file-hover > :first-child {
  filter: blur(1px);
}

$modal-transition-time = 250ms;

.modal {
  position: fixed;
  visibility: hidden;

  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  transition: visibility 0 ease-in-out $modal-transition-time;

  .has-file-hover & {
    visibility: visible;

    transition: visibility 0 ease-in-out;
  }

  &:before {
    content: '';

    position: absolute;
    opacity: 0;
    z-index: -1;
    width: 100%;
    height: 100%;

    background: radial-gradient(ellipse at center, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.3) 100%);

    transition: opacity $modal-transition-time ease-in-out;

    .has-file-hover & {
      opacity: 1;
    }
  }

  .modal-content {
    position: absolute;
    opacity: 0;
    width: 75%
    left: 50%;
    top: 50%;
    padding: 1.813em;
    transform: translate(-50%, -50%) translateY(-1em);

    box-shadow: 0 3em 5em rgba(0, 0, 0, 0.4);

    transition: all $modal-transition-time ease-in-out;

    .has-file-hover & {
      opacity: 1;
      transform: translate(-50%, -50%);
    }
  }
}

.drop-target {
  color: white;
  text-align: center;

  background: rgba(0, 0, 0, 0.85);
  border-radius: 1.813em;

  .drop-target__title {
    margin: 0;

    font-size: 3em;
    font-weight: 900;
  }

  .drop-target__description {
    margin: 0;

    color: #999;
  }
}
