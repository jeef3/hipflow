{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "plugins": [ "react" ],

  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true,
    "modules": true
  },
  "rules": {
    "indent": [ 2, 2 ],
    "quotes": [ 2, "single" ],
    "semi": [ 2, "always" ],

    "react/jsx-no-undef": 2,
    "react/jsx-quotes": [2, "double", "avoid-escape"],
    "react/jsx-uses-react": 2,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 2
  }
}
